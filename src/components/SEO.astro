---
export interface Props {
  title: string;
  description: string;
  url?: string;
  image?: string;
  keywords?: string;
}
const {
  title,
  description,
  url = "croking09.github.io",
  image = "/preview.png",
  keywords = "portafolio, desarrollador, frontend, portfolio, developer, backend, fullstack, javier hm, croking, croking09, javier hernandez, javier hernandez martinez",
} = Astro.props;
---

<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="author" content="Javier Hernández Martínez" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta charset="UTF-8" />

  <meta
    name="google-site-verification"
    content="2gvw5s1-xsX3ZkmgBzLIa1D-LB70gEjRI9Qj69AkZng"
  />

  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={url} />
  <meta property="og:image" content={image} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <link rel="sitemap" href="/sitemap-index.xml" />

  <link rel="icon" sizes="16x16" href="/favicon/favicon16.ico" />
  <link rel="icon" sizes="32x32" href="/favicon/favicon32.ico" />
  <link rel="icon" sizes="96x96" href="/favicon/favicon96.ico" />
</head>
